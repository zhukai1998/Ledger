<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ActionLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="TextStyle.Accent">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="TextStyle.Accent.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/ic_come</item>
    </style>

    <!--数字-->
    <style name="digit">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--对话框-->
    <style name="AlertDialog" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--启动页数字键盘锁-->
    <style name="KeyBoardBtnStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--数字进度条-->
    <style name="NumberProgressBar_sp">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">@android:color/transparent</item>
        <item name="progress_reached_color">@color/color_shipin</item>
        <item name="progress_text_size">14sp</item>
        <item name="progress_text_color">@color/color_shipin</item>
        <item name="progress_reached_bar_height">20dp</item>
        <item name="progress_unreached_bar_height">0dp</item>
        <item name="android:focusable">false</item>
    </style>

    <!--预算进度条-->
    <style name="GradientProgressBar_sp" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="progress_reached_bar_height">5dp</item>
        <item name="progress_unreached_bar_height">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">#E8E8E8</item>
        <item name="progress_reached_color">#E8D7C2</item>
    </style>

    <!--设置上面的dialog-->
    <style name="setAlertDialog_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--日历-->
    <style name="calender_week_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>

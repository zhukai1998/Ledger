<?xml version="1.0" encoding="UTF-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#C8EAD1" />

    <!-- 圆角的半径 -->
    <corners android:radius="10dp" />

    <!--
    边的属性
    <stroke
        android:color="#E5CBC1"
        android:width="2dp">
    </stroke>
    -->
    <!--控制文字与边框的距离-->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:bottom="5dp"
        android:top="5dp"></padding>
</shape>
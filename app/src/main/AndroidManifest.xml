<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhukai.ledger">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.sign.ui.PWDActivity"></activity>
        <activity android:name=".module.index.ui.IndexActivity" />
        <activity android:name=".module.sign.ui.SMSActivity" />

        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity android:name=".module.ad.ui.ADActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>